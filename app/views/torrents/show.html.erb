<p id="notice"><%= notice %></p>

<p>
  <b>User:</b>
  <%= @torrent.user_id %>
</p>

<p>
  <b>Name:</b>
  <%= @torrent.name %>
</p>

<p>
  <b>Files:</b>
  <%= @torrent.files %>
</p>

<p>
  <b>Trackers:</b>
  <%= @torrent.trackers %>
</p>

<p>
  <b>Info hash:</b>
  <%= @torrent.info_hash %>
</p>

<p>
  <b>Torrent file:</b>
  <%= link_to File.basename(@torrent.torrent_file.path), SITE_URL + @torrent.torrent_file.url, :class => 'noicon' if @torrent.torrent_file and @torrent.torrent_file.url %>
</p>

<p>
  <b>Comments:</b>
  <%= @torrent.comments %>
</p>


<%= link_to 'Edit', edit_torrent_path(@torrent) %> |
<%= link_to 'Back', torrents_path %>
