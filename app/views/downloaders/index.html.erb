<% @title = 'Downloaders' %>
<div class="page-header">
  <h1>
    <%= @title %>
    <%= link_to "Create Downloader", new_downloader_path, class: 'btn btn-primary btn-mini' if current_user.system_admin? %>
  </h1>
</div>

<%= form_tag downloaders_path, :method => :get, :remote => true, id: "downloaders_search", class: 'form-search' do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'search-query' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="downloaders"><center><%= image_tag "contour/ajax-loader.gif" %></center></div>

<%= javascript_tag do %>
  $(function(){
    $.get($("#downloaders_search").attr("action"), $("#downloaders_search").serialize(), null, "script");
  });
<% end %>
