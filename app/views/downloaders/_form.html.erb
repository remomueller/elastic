<div class="page-header">
  <h1><%= @title %></h1>
</div>

<%= form_for(@downloader, html: { class: 'form-horizontal' }) do |f| %>
  <% if @downloader.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@downloader.errors.count, "error") %> prohibited this downloader from being saved:</h2>

      <ul>
      <% @downloader.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :name, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_field :name %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :files, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :files, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="control-group">
    <%= label 'target', 'file_name', 'Target file name', class: 'control-label' %>
    <div class="controls">
      <%= text_field_tag :target_file_name, @downloader.simple_executable_file.blank? ? '' : File.basename(@downloader.simple_executable_file.path.split('_')[0..-4].join('_')) %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :comments, nil, class: 'control-label' %>
    <div class="controls">
      <%= f.text_area :comments, rows: 7, style: 'width:95%' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, class: 'btn btn-primary' %>
    <%= cancel %>
  </div>
<% end %>
